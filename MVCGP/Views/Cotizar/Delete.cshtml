@model MVCGP.Models.Cotizar

@{
    ViewData["Title"] = "Borrar";
}

<h3>Deseas Eliminar?</h3>
<div>
    <h4>Cotizar</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Producto)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Producto.nombreProducto)
        </dd class>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Semanas)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Semanas.Id)
        </dd class>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Borrar" class="btn btn-danger" /> |
        <a asp-action="Index">Regresar</a>
    </form>
</div>
